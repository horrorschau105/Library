<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="LibrarySimulator" Height="300" Width="300">
    <Grid>
        <Button x:Name="loginClientButton" Content="Log as client" HorizontalAlignment="Left" Height="42" Margin="151,56,0,0" VerticalAlignment="Top" Width="131" FontSize="20" Click="loginClientButton_Click"/>
        <Button x:Name="loginAdminButton" Content="Log as admin" HorizontalAlignment="Left" Height="42" Margin="10,56,0,0" VerticalAlignment="Top" Width="136" FontSize="20" Click="loginAdminButton_Click"/>
        <TextBlock x:Name="loginTextBlock" HorizontalAlignment="Left" Height="46" Margin="10,10,0,0" TextWrapping="Wrap" Text="Choose type of account:" VerticalAlignment="Top" FontSize="25" Width="272" TextAlignment="Center" RenderTransformOrigin="0.5,0.5">

        </TextBlock>

    </Grid>
</Window>
